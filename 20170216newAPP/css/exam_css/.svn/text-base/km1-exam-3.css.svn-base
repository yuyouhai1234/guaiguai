html,body{
	width:100%;
	height:100%;
}
.exam-outer{
	display:-webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
	-webkit-box-orient:vertical;
    -webkit-box-direction:normal;
    -moz-box-orient:vertical;
    -moz-box-direction:normal;
    flex-direction:column;
    -webkit-flex-direction:column;
    position:relative;
    overflow:hidden;
}
.km1-exam-header{
	width:100%;
	height:80px;
	background:#3B3838;
	text-align:center;
	line-height:80px;
	color:#fff;
	font-size:22px;
}
.exam-about-head li{
	float:left;
	width:33%;
	box-sizing:border-box;
	text-align:center;
}
.exam-about-head li:nth-child(1){
	padding-left:40px;
	font-size:22px;
	text-align: left;
}
#exam-time{
	color:red;
}
/* 以下是考试内容 */
.exam-content{
	box-flex:1;
	-webkit-box-flex:1;
	-moz-box-flex:1;
	flex:1;
	-webkit-flex:1;
	width:100%;
	overflow-y:auto; 
}
.question-tit{
	line-height:40px;
	margin:0 auto;
	width:90%;
	margin-top:20px;
	font-size:26px;
}
.judge-type{
	display:inline-block;
	width:60px;
	height:40px;
	line-height:40px;
	font-size:12px;
	text-align: center;
	border:1px solid #000;
	border-radius: 10px;
	color:#f00;
	margin-right:10px;
}
/* 以下是放图片的盒子 */
.question-img-box{
	width:90%;
	margin:0 auto;
	margin-top:20px;
	display:none;
}
.exam-pic{
	width:90%;
	height:300px;
}
/* 以下是选项 */
.question-option{
	width:90%;
	margin:0 auto;
	margin-top:30px;
}
.question-option li{
	line-height:40px;
	font-size:24px;
}
.option-btn{
	display:inline-block;
	width:30px;
	height:30px;
	border:1px solid #ccc;
	border-radius: 50%;
	margin-right:10px;
	margin-top:20px;
}
.active{
	background:red;
}
/* 以下是底部 */
.exam-footer{
	width:100%;
	height:80px;
	background:#3B3838;
	line-height:80px;
	color:#fff;
	font-size:16px;
	text-align: center;
}
.for-subject{
	width:20%;
	height:40px;
	margin:0 10px;
	border-radius: 20px;
}
/* 答题卡 */
.answer-card{
	width:100%;
	height:500px;
	background:#fff;
	box-shadow: 1px 1px 2px 2px #ccc;
	border-radius: 20px;
	position:absolute;
	left:0;
	bottom:80px;
	z-index:1;
	display:none;
}
.answer-list{
	width:100%;
	height:100%;
	box-sizing:border-box;
	padding:10px;
	overflow:auto;
}
.answer-number{
	float:left;
	width:40px;
	height:40px;
	line-height:40px;
	text-align: center;
	border:1px solid #000;
	border-radius: 50%;
	margin:10px;
	font-size:12px;
}
.answer-active{
	background:green;
	color:#fff;
}
.answer-false-active{
	background:red;
	color:#fff;
}
/* 以下是考试结果 */
.exam-result{
	width:90%;
	margin:0 auto;
	margin-top:60px;
}
.result{
	color:red;
	font-weight:bold;
	font-size:24px;
	line-height:50px;
}
.result-cont{
	line-height:40px;
	text-indent: 2em;
}
/* 多选情况下的提交按钮 */
#submit-btn{
	width:20%;
	margin-left:40%;
	margin-top:20px;
	height:40px;
	line-height:40px;
	border:0;
	border-radius: 20px;
	background:#E29851;
	color:#fff;
	letter-spacing: 3px;
}
/*以下是总成绩*/
.cj-box{
	position:absolute;
	left:50%;
	top:50%;
	width:70%;
	margin:0 auto;
	height:200px;
	margin-top:-100px;
	margin-left:-35%;
	border:2px solid #000000;
	z-index:4;
	background:#fff;
	border-radius: 20px;
	display:none;
}
.cj-num{
	line-height:70px;
	font-size:24px;
	width:90%;
	margin:0 auto;
	margin-top:20px;
	text-align: center;
}
.cj-info{
	color:red;
	font-weight: bold;
	margin:0 5px;
}
#again-btn{
	width:90%;
	height:40px;
	margin-left:5%;
	margin-top:20px;
	border:0;
	background:#EDB66E;
	color:#fff;
	font-size:30px;
	letter-spacing: 4px;
	border-radius:10px;
}
.bg-filter{
	width:100%;
	height:100%;
	background:rgba(50,46,46,.8);
	z-index:3;
	position:absolute;
	left:0;
	top:0;
	display:none;
}
