body,html{
	width: 100%;
	height: 100%;
}
body{
	background: #f7f7f7;
	position:relative;
}
.coach-list-cont{
	width: 100%;
	height: auto;
	overflow: hidden;
	position:relative;
}
#list-box{
	height:auto;
}
.share-header{
	width: 100%;
	height: 80px;
	line-height: 80px;
	font-size: 30px;
	background: #fff;
	margin: 50px 0;
	padding:0 30px;
	box-sizing: border-box;
	text-align: center;
	color:#F5A521;
}
.share-bottom{
	width: 400px;
	height: 400px;
	border: 1px solid #ccc;
	margin: 0 auto;
	background: #fff;
}
/*以下是使用攻略*/
.how-use{
	width:90%;
	height:60px;
	line-height:60px;
	text-align: center;
	font-size:26px;
	margin-top:100px;
}
.share-bg{
	position:absolute;
	left:0;
	top:0;
	width:100%;
	height:100%;
	background:rgba(83,80,80,.5);
	z-index:3;
	display:none;
}
.how-use-box{
	width:80%;
	height:auto;
	min-height:400px;
	position:absolute;
	left:50%;
	top:50%;
	margin-left:-40%;
	margin-top:-300px;
	background:#fff;
	z-index:5;
	box-sizing: border-box;
	padding:10px;
	line-height:45px;
	font-size:22px;
	border-radius: 20px;
	display:none;
}
