body,html{
	width:100%;
	height:100%;
}
body{
	background:#f7f7f7;
}
.order-list-box{
	width:100%;
	height:100%;
	overflow: hidden;
	position:relative;
}
.order-list-cont{
	height:auto;
}
.order-list{
	width:100%;
	height:400px;
	background:#fff;
	margin-bottom:20px;
}
/*以下是订单内容的样式*/
.order-school-info{
	width:100%;
	height:80px;
	border-bottom:1px solid #ccc;
	line-height:80px;
	box-sizing: border-box;
	padding:0 20px;
	font-size:26px;
	font-weight: bold;
}
.school-name{
	float:left;
	
}
.order-time{
	float:right;
}
.order-tit{
	line-height:60px;
	box-sizing: border-box;
	padding:0 20px;
	font-size:24px;
}
.order-status{
	color:red;
}
.hidden{
	display:none;
}
.order-btn{
	width:100%;
	height:80px;
	box-sizing: border-box;
	padding-left:150px;
}
.order-btn input{
	width:180px;
	height:50px;
	background:0;
	border:1px solid #F5A521;
	font-size:24px;
	color:#F5A521;
	margin:0 20px;
	border-radius: 10px;
	display:none;
	float:right;
}
/*没有订单*/
.no-order{
	display:none;
	width:100%;
	height:100%;
	text-align: center;
	box-sizing: border-box;
	padding-top:200px;
	font-size:28px;
	line-height:50px;
}
.no-order a{
	color:red;
	font-weight:bold;
}
