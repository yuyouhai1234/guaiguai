body,html{
	width:100%;
	height:100%;
}
.eva-box{
	display:-webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
	-webkit-box-orient:vertical;
    -webkit-box-direction:normal;
    -moz-box-orient:vertical;
    -moz-box-direction:normal;
    flex-direction:column;
    -webkit-flex-direction:column;
    position:relative;
}
.eva-menu{
	width:100%;
	height:80px;
	background:#F9C46C;
	color:#fff;
	overflow: hidden;
}
.menu-info{
	float:left;
	width:100%;
	height:80px;
	line-height:80px;
	text-align: center;
	font-size:28px;
}
.menu-diff{
	background:#D36F6F;
}
.eva-cont-box{
	box-flex:1;
	-webkit-box-flex:1;
	-moz-box-flex:1;
	flex:1;
	-webkit-flex:1;
    position:relative;
    overflow: hidden;
}
.basis-eva-box{
	width:90%;
	height:100px;
	margin:0 auto;
}
.eva-tit{
	float:left;
	width:156px;
	height:100px;
	line-height:100px;
	text-align: center;
	font-size:28px;
	font-weight: bold;
}
.eva-star-box{
	float:left;
	width:250px;
	height:100px;
}
.eva-star-box li{
	float:left;
	padding-top:28px;
}
.eva-score-box{
	float:left;
	width:120px;
	height:100px;
	line-height:100px;
	text-align: center;
	font-size:28px;
	color:red;
	font-weight: bold;
}
/*以下是多行文本*/
.comment-cont-box{
	width:90%;
	height:200px;
	margin:0 auto;
}
#comment-cont,#comment-coach-cont{
	width:100%;
	height:100%;
	font-size:26px;
	box-sizing: border-box;
	padding:10px;
}
.sure-btn-box{
	width:90%;
	height:100px;
	margin:0 auto;
}
#comment-btn,#comment-coach-btn{
	width:200px;
	height:70px;
	background:#F1A653;
	color:#fff;
	font-size:28px;
	margin:0 auto;
	display:block;
	border:0;
	margin-top:20px;
	border-radius: 10px;
}
/*以下是评价成功弹出框*/
.bg{
	width:100%;
	height:100%;
	position:absolute;
	left:0;
	top:0;
	background:rgba(90,90,90,.5);
	display:none;
}
.comment-ret{
	width:70%;
	height:250px;
	position:absolute;
	left:50%;
	top:50%;
	margin-left:-35%;
	margin-top:-124px;
	background:#fff;
	border-radius: 15px;
	display:none;
	box-sizing: border-box;
	padding:20px;
}
.comment-result{
	line-height:50px;
	font-size:26px;
	color:#F5A521;
	font-weight:bold;
	text-align: center;
}
#comment-result-btn,#com-result-btn{
	width:200px;
	height:50px;
	background:0;
	border:1px solid #F5A521;
	font-size:26px;
	display:block;
	margin:0 auto;
	margin-top:20px;
	color:red;
	border-radius: 10px;
}
