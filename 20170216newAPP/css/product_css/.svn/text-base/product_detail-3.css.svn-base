body,html{
	width:100%;
	height:100%;
}
body{
	display:-webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
	-webkit-box-orient:vertical;
    -webkit-box-direction:normal;
    -moz-box-orient:vertical;
    -moz-box-direction:normal;
    flex-direction:column;
    -webkit-flex-direction:column;
    position:relative;
}
.product-detail-header{
	width:100%;
	height:80px;
	box-shadow: 2px 2px 2px 2px #ccc;
	box-sizing: border-box;
	padding:15px 70px;
}
.search-txt{
	float:left;
	width:400px;
	height:50px;
	box-sizing: border-box;
	padding-left:20px;
	border:1px solid #F5A521;
	border-radius: 10px 0px 0px 10px;
	font-size:30px;
}
.search-btn{
	width:100px;
	height:50px;
	float:left;
	box-sizing: border-box;
	border:0;
	background:#F5A521;
	color:#fff;
	border-radius: 0 10px 10px 0;
	font-size:30px;
}
/*以下是中间部分*/
.product-detail-main{
	box-flex:1;
	-webkit-box-flex:1;
	-moz-box-flex:1;
	flex:1;
	-webkit-flex:1;
    position:relative;
    overflow: hidden;
}
.detail-main-box{
	height:auto;
}
.detail-list{
	width:100%;
	height:auto;
	min-height:450px;
	box-shadow: 2px 2px 2px 2px #ccc;
}
.detail-pic{
	width:40%;
	height:450px;
	float:left;
	box-sizing: border-box;
	padding:10px 8px;
}
.detail-pic img{
	width:250px;
	height:250px;
	border:1px solid #ccc;
	box-sizing: border-box;
	margin-top:10px;
}
.detail-cont{
	width:60%;
	height:450px;
	float:left;
	box-sizing: border-box;
	padding:10px;
}
.detail-cont p{
	line-height:35px;
	font-size:24px;
}
.school-price{
	color:red;
}
.appoint-btn{
	width:150px;
	height:50px;
	margin-left:120px;
	border:0;
	background:#F5A521;
	color:#fff;
	border-radius: 10px;
	font-size:26px;
}
.stand-cont{
	color:#D06969;
}
.cut-price{
	color:red;
}
.cut-info{
	color:#F5A521;
}
.cut-info b{
	color:red;
}
