    top:0px;
}
.attitude-box>.add-star{
    background:url(../../images/star.png);
}
.attitude-box>.del-star{
    background:url(../../images/star-pra.png);
    background-color:white;
}
/*技术*/
.skill-box>span{
	display:inline-block;
    position:absolute;
    width:140px;
    height:23px;
    background-size:cover;
    background-repeat:no-repeat;
    left:0px;
    top:0px;
}
.skill-box>.add-star{
    background:url(../../images/star.png);
}
.skill-box>.del-star{
    background:url(../../images/star-pra.png);
    background-color:white;
}
/*卫生*/
.health-box>span{
	display:inline-block;
    position:absolute;
    width:140px;
    height:23px;
    background-size:cover;
    background-repeat:no-repeat;
    left:0px;
    top:0px;
}
.health-box>.add-star{
    background:url(../../images/star.png);
}
.health-box>.del-star{
    background:url(../../images/star-pra.png);
    background-color:white;
