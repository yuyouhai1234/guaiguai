body,html{
	width:100%;
	height:100%;
}
body{
	display:-webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
	-webkit-box-orient:vertical;
    -webkit-box-direction:normal;
    -moz-box-orient:vertical;
    -moz-box-direction:normal;
    flex-direction:column;
    -webkit-flex-direction:column;
    position:relative;
}
.school-detail-outer{
	width:100%;
	height:40%;
	box-shadow: 2px 2px 2px 2px #ccc;
}
.school-info{
	width:100%;
	height:auto;
}
.school-pic{
	width:100%;
	height:250px;
	overflow: hidden;
}
.school-pic img{
	width:100%;
	height:250px;
}
.school-name{
	line-height: 40px;
	margin-left:20px;
	font-size:26px;
}
.tit-diff{
	color:#918F8F;
}
.tit-info{
	color:#F5A521;
	font-weight: bold;
}
.school-eva{
	display:inline-block;
	width:140px;
    height:23px;
    position:relative;
    overflow:hidden;
}
.school-eva>span{
	display:inline-block;
    position:absolute;
    width:140px;
    height:23px;
    background-size:cover;
    background-repeat:no-repeat;
    left:0px;
    top:0px;
}
.school-eva>.add-star{
    background:url(../../images/star.png);
}
.school-eva>.del-star{
    background:url(../../images/star-pra.png);
    background-color:white;
}
/*以下是主要内容*/
.school-about-outer{
	box-flex:1;
	-webkit-box-flex:1;
	-moz-box-flex:1;
	flex:1;
	-webkit-flex:1;
    overflow: auto;
    position:relative;
}
.school-iscroll{
	height:auto;
}
/*以下是产品列表*/
.detail-list{
	width:100%;
	height:450px;
	box-shadow: 1px 1px 1px 1px #ccc;
}
.detail-pic{
	width:40%;
	height:450px;
	float:left;
	box-sizing: border-box;
	padding:10px 8px;
}
.detail-pic img{
	width:250px;
	height:250px;
	border:1px solid #ccc;
	box-sizing: border-box;
	margin-top:10px;
}
.detail-cont{
	width:60%;
	height:450px;
	float:left;
	box-sizing: border-box;
	padding:10px 10px;
}
.detail-cont p{
	line-height:32px;
	font-size:24px;
}

.school-price{
	color:red;
}
.school-pri{
	color:red;
}
.appoint-btn{
	width:200px;
	height:45px;
	margin-left:80px;
	border:0;
	background:#F5A521;
	color:#fff;
	border-radius: 10px;
	font-size:26px;
	letter-spacing: 5px;
	margin-top:10px;
}
.cut-price{
	color:red;
}
.cut-info{
	color:#F5A521;
}
.cut-info b{
	color:red;
}
.service-txt span{
	color:#D36F6F;
}
/*以下是教练列表*/
.coach-info{
	width:100%;
	height:230px;
	box-shadow: 1px 1px 1px 1px #ccc;
}
.coach-pic{
	width:40%;
	height:230px;
	float:left;
}
.coach-pic img{
	width:220px;
	height:180px;
	margin-left:18px;
	margin-top:10px;
}
.coach-cont{
	width:60%;
	height:230px;
	float:left;
	box-sizing: border-box;
	line-height:40px;
	font-size:26px;
}
.skill-box,.attitude-box,.health-box{
	display:inline-block;
	width:140px;
    height:23px;
    position:relative;
    overflow:hidden;
}
/*服务态度*/
.attitude-box>span{
	display:inline-block;
    position:absolute;
    width:140px;
    height:23px;
    background-size:cover;
    background-repeat:no-repeat;
