/*以下是底部*/
.school-about-list{
	width:100%;
	height:80px;
	background:#F5A521;
	position:relative;
}
.about-list{
	width:100%;
	height:80px;
	overflow: hidden;
}
.list-tit{
	float:left;
	width:25%;
	height:80px;
	text-align: center;
	line-height:80px;
	color:#fff;
	font-size:26px;
	box-sizing: border-box;
	border-right:1px solid #fff;
	border-radius: 10px;
}
.list-tit:nth-child(4){
	border:0;
}
.school-menu-diff{
	background:#D36F6F;
}
.hidden{ display:none;}
/*以下是驾校简介*/
.jianjie-cont{
	line-height:40px;
	font-size:26px;
	box-sizing: border-box;
	padding:20px;
}
/*以下是驾校评价*/
.school-eva-num{
	width:100%;
	height:80px;
	line-height:80px;
	box-sizing: border-box;
	padding-left:20px;
	font-size:26px;
	font-weight:bold;
	color:#F5A521;
	border-bottom:1px solid #ccc;
}
.school-eva-box{
	width:100%;
	height:300px;
	overflow: hidden;
	border-bottom:1px dotted #ccc;
}
.eva-per{
	width:100%;
	height:100px;
	line-height:100px;
	font-size:24px;
	box-sizing: border-box;
	padding:8px;
}
.eva-person{
	font-weight:bold;
}
.per-product{
	color:#F5A521;
}
.eva-time{
	font-size:24px;
	float:right;
}
.eva-cont{
	width:100%;
	height:200px;
	line-height:50px;
	box-sizing: border-box;
	padding:8px;
	font-size:24px;
}

