body,html{
	width:100%;
	height:100%;
}
.product-list-cont{
	width:100%;
	height:100%;
	position:relative;
	overflow: hidden;
}
#list-box{
	height:auto;
}
.product-list-dl{
	width:100%;
	height:auto;
	min-height:250px;
	border-bottom:1px solid #ccc;
}
.product-pic{
	float:left;
	width:40%;
	height:250px;
	text-align: center;
}
.product-pic img{
	width:230px;
	height:230px;
	border:1px solid #ccc;
	margin:9px;
}
.product-cont{
	width:60%;
	height:250px;
	float:left;
	box-sizing: border-box;
	padding:10px;
}
.cont-main{
	line-height:60px;
	font-size:28px;
	color:#F5A521;
}
