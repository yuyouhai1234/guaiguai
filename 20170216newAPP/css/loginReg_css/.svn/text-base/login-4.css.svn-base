html,body{
	width:100%;
	height:100%;
}
a{
	color:#000;
}
.login-box{
	display:-webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
	-webkit-box-orient:vertical;
    -webkit-box-direction:normal;
    -moz-box-orient:vertical;
    -moz-box-direction:normal;
    flex-direction:column;
    -webkit-flex-direction:column;
    position:relative;
}
.login-header{
	width:100%;
	height:250px;
	text-align: center;
	box-sizing: border-box;
	padding-top:25px;
}
.login-header img{
	width:200px;
}
/*以下是中间部分*/
.login-cont-box{
	box-flex:1;
	-webkit-box-flex:1;
	-moz-box-flex:1;
	flex:1;
	-webkit-flex:1;
}
.user-tel-box,.user-pwd-box,.reg-tel-box,.reg-code-box,.reg-pwd-box{
	width:90%;
	height:60px;
	margin:0 auto;
	box-sizing: border-box;
	border:1px solid #ccc;
	padding-left:10px;
	border-radius: 10px;
}
.login-user-pic{
	float:left;
	margin-top:4px;
	width:50px;
}
#login-user-tel,#login-user-pwd,#reg-user-tel,#reg-user-pwd,#reset-user-tel,#reset-user-pwd,#reset-user-phone,#reset-user-pass{
	float:left;
	height:56px;
	width:80%;
	border:0;
	margin-left:10px;
	font-size:24px;
}
.error-box{
	width:90%;
	height:40px;
	margin:0 auto;
	font-size:22px;
	color:red;
	text-align: center;
	line-height:40px;
}
.login-pwd-pic{
	float:left;
	width:40px;
	margin-top:6px;
}
.login-btn-box,.login-other-box,.reg-btn-box,.reg-other-box,.reg-deal-box{
	width:90%;
	height:60px;
	margin:0 auto;
}
#login-btn,#reg-btn,#reset-btn,#user-reset-btn{
	width:100%;
	height:60px;
	background:#F1A653;
	color:#fff;
	font-size:36px;
	letter-spacing: 5px;
	border:0;
	border-radius: 20px;
}
.login-other-box{
	line-height:60px;
	font-size:22px;
}
.no-reg{
	float:left;
	margin-left:20px;
}
.forget-pwd{
	float:right;
	margin-right:20px;
}
/*以下是注册部分*/
#reg-user-code,#reset-user-code{
	float:left;
	height:56px;
	width:60%;
	border:0;
	margin-left:10px;
	font-size:24px;
}
.code-abled{
	float:right;
	height:57px;
	background:#F5A521;
	border:0;
	width:25%;
	border-radius: 10px;
	font-size:24px;
	color:#fff;
	font-weight:bold;
}
.reg-user-pic{
	float:left;
	width:50px;
	margin-top:8px;
}
.reg-other-box{
	text-align: right;
	box-sizing: border-box;
	padding-right:20px;
	line-height:60px;
	font-size:24px;
	margin-top:40px;
}
.for-login{
	color:#F5A521;
	font-weight:bold;
}
.reg-deal-box{
	box-sizing: border-box;
	padding-left:60px;
}
#agree-box{
	float:left;
	width:30px;
	height:30px;
	margin-top:15px;
	margin-right:10px;
}
#deal-cont{
	float:left;
	height:60px;
	line-height: 60px;
}
.code-disabled{
	background:#cecece;
}
/*以下是注册弹出框*/
.deal-bg{
	position:absolute;
	left:0;
	top:0;
	width:100%;
	height:100%;
	background:rgba(91,90,90,.8);
	display:none;
}
.deal-box{
	width:600px;
	height:100%;
	position:absolute;
	left:20px;
	top:0;
	box-sizing: border-box;
	border:2px solid #D36F6F;
	background:#fff;
	border-radius: 20px;
	padding:10px;
	display:none;
}
#wrapper{
	width:100%;
	height:100%;
	position:relative;
	overflow: hidden;
}
.deal-cont{
	height:auto;
}
.data-main-cont p{
	font-size:22px;
	line-height:50px;
}
#agree-btn{
	width:300px;
	height:50px;
	border:0;
	background:#F5A521;
	color:#fff;
	font-size:26px;
	margin:20px 0 0 150px;
	border-radius: 10px;
	letter-spacing: 5px;
}
